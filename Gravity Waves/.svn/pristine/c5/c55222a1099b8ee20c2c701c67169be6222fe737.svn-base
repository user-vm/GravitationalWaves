    		return;
    	
    	isArrowsVisible = isVisible;
        	
    	arrowGroup.setVisible(isVisible);
    	fieldColormap.setVisible(!isVisible);
    	
    	if(isVisible){
    		updateFieldTexts();
    		updateField();}
    	else{
    		updateColormapTexts();
    		updateColormap(true);
    	}

    	numZPointsText.setDisable(!isVisible);
    	zPointsDistText.setDisable(!isVisible);
    	zPointsDistUnitsBox.setDisable(!isVisible);
    }
    
